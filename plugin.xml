<plugin name='taggable' version='1.0-pg' grailsVersion='1.1 &gt; *'>
  <author>Graeme Rocher</author>
  <authorEmail>graeme.rocher@springsource.com</authorEmail>
  <title>Taggable Plugin</title>
  <description>A plugin that adds a generic mechanism for tagging data.
</description>
  <documentation>http://grails.org/Taggable+Plugin</documentation>
  <type>TaggableGrailsPlugin</type>
  <resources>
    <resource>org.grails.taggable.Tag</resource>
    <resource>org.grails.taggable.TagLink</resource>
    <resource>org.grails.taggable.TaggableService</resource>
    <resource>org.grails.taggable.TagsTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies />
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>